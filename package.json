{
  "name": "@flowingcode/fc-whatsapp-button",
  "version": "2.0.0",
  "description": "Simple Whatsapp Button Web Component",
  "license": "MIT",
  "author": "Mohammed Shah <@smashah>",
  "main": "dist/src/index.js",
  "targets": {
    "main": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FlowingCode/fc-whatsapp-button"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/src/index.js",
    "./dist/src/fc-custom-button.js": "./dist/src/fc-custom-button.js",
    "./dist/src/fc-whatsapp-button.js": "./dist/src/fc-whatsapp-button.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "tsc && npm run analyze -- --exclude dist",
    "buildstatic": "tsc && parcel build demo/index.html",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\""
  },
  "dependencies": {
    "@vaadin/button": "^24.4.0",
    "@vaadin/dialog": "^24.4.0",
    "@vaadin/icon": "^24.4.0",
    "@vaadin/progress-bar": "^24.4.0",
    "@vaadin/vaadin-themable-mixin": "^24.4.0",
    "lit": "^3.0.0",
    "@polymer/polymer": "^3.4.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.3",
    "@open-wc/eslint-config": "^7.0.0",
    "@open-wc/testing": "next",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vaadin/checkbox": "^24.4.0",
    "@vaadin/form-layout": "^24.4.0",
    "@vaadin/text-field": "^24.4.0",
    "@web/dev-server": "^0.1.32",
    "@web/test-runner": "next",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "tslib": "^2.4.0",
    "typescript": "^5.1.6"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
